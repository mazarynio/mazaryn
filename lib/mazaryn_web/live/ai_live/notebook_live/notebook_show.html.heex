              <div>
                <label class="block text-sm font-medium text-slate-700 mb-2">Share Link</label>
                <div class="flex items-center space-x-2">
                  <input
                    type="text"
                    readonly
                    value={"#{MazarynWeb.Endpoint.url()}/#{@locale}/ai/notebooks/#{@notebook.id}"}
                    class="flex-1 px-4 py-3 bg-slate-50 border border-slate-200 rounded-xl text-sm font-mono text-slate-700 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
