<div class="relative w-full bg-white dark:bg-gray-900 shadow-lg hover:shadow-xl transition-all duration-300 border border-gray-100 dark:border-gray-700 pr-6 pl-6 pb-6 pt-6 mt-6 rounded-2xl">
  <div
    x-data="{ open: false, tOpen: false }"
    x-on:click.outside="open = false; tOpen = false"
    class="flex justify-between items-center"
  >
    <!-- User Info Section -->
    <div class="flex items-center space-x-4">
      <div class="relative group">
        <div class="absolute inset-0 bg-gradient-to-br from-blue-500 to-purple-600 rounded-full blur-md opacity-20 group-hover:opacity-40 animate-pulse transition-opacity duration-300"></div>
        
        <div class="relative h-12 w-12 rounded-full overflow-hidden border-2 border-white dark:border-gray-700 shadow-lg ring-2 ring-blue-100/50 dark:ring-purple-900/30 bg-gradient-to-br from-blue-100 to-purple-100 dark:from-blue-900/20 dark:to-purple-900/20">
          <%= if get_user_avatar(@post.author) != "/images/default-avatar.png" do %>
            <img
              src={get_user_avatar(@post.author)}
              class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-110"
              alt={"#{@post.author}'s avatar"}
              onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
            />
            <div class="absolute inset-0 hidden items-center justify-center bg-gradient-to-br from-blue-500 to-purple-600 text-white text-lg font-bold">
              <%= String.first(@post.author || "U") |> String.upcase() %>
            </div>
          <% else %>
            <div class="h-full w-full flex items-center justify-center bg-gradient-to-br from-blue-500 to-purple-600 text-white text-lg font-bold group-hover:from-blue-600 group-hover:to-purple-700 transition-all duration-300">
              <%= String.first(@post.author || "U") |> String.upcase() %>
            </div>
          <% end %>
        </div>
        
        <div class="absolute -bottom-1 -right-1 w-4 h-4 bg-gradient-to-br from-green-400 to-emerald-500 rounded-full border-2 border-white dark:border-gray-700 shadow-lg">
          <div class="absolute inset-0 bg-green-400 rounded-full animate-ping opacity-30"></div>
        </div>
      </div>
      
      <div class="flex flex-col">
        <%= live_redirect(to: Routes.live_path(@socket, MazarynWeb.UserLive.Profile, @locale, @post.author),
          class: "group"
        )  do %>
          <div class="flex items-center space-x-2">
            <span class="text-gray-900 dark:text-white text-base font-semibold group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors duration-200 cursor-pointer">
              <%= @post.author %>
            </span>
            <%= if verified?(@post.author)  do %>
              <img
                alt="verified user"
                src={Routes.static_path(@socket, "/images/verified.png")}
                class="h-5 w-5 rounded-full"
              />
            <% end %>
          </div>
        <% end %>
        <span class="text-gray-500 dark:text-gray-400 text-sm font-medium">
          <%= Timex.from_now(@post.date_created) %>
        </span>
      </div>
    </div>

    <!-- 3-dots menu -->
    <div class="relative">
      <button 
        @click="open = !open; if (!open) tOpen = false"
        class="p-2 rounded-full hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors duration-200 group"
      >
        <%= Heroicons.icon("ellipsis-vertical",
          type: "solid",
          class: "h-5 w-5 text-gray-400 group-hover:text-gray-600 dark:group-hover:text-gray-300 transition-colors duration-200"
        ) %>
      </button>
      
      <div
        x-show="open"
        x-transition:enter="transition ease-out duration-200"
        x-transition:enter-start="opacity-0 scale-95"
        x-transition:enter-end="opacity-100 scale-100"
        x-transition:leave="transition ease-in duration-150"
        x-transition:leave-start="opacity-100 scale-100"
        x-transition:leave-end="opacity-0 scale-95"
        class="absolute top-full right-0 mt-2 w-56 bg-white dark:bg-gray-800 rounded-xl shadow-xl border border-gray-200 dark:border-gray-700 py-2 z-50"
        style="display: none;"
      >
        <%= if @post.author != @current_user.username  do %>
          <button
            class="w-full text-left px-4 py-3 text-sm text-gray-700 dark:text-gray-300 hover:bg-blue-50 dark:hover:bg-blue-900/20 hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-200 flex items-center space-x-3"
            phx-click={@follow_event}
            phx-value-username={"#{@post.author}"}
            phx-target={@myself}
            @click="open = false"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
            </svg>
            <span><%= @follow_text %></span>
          </button>
          
          <button class="w-full text-left px-4 py-3 text-sm text-gray-700 dark:text-gray-300 hover:bg-red-50 dark:hover:bg-red-900/20 hover:text-red-600 dark:hover:text-red-400 transition-colors duration-200 flex items-center space-x-3">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728L5.636 5.636m12.728 12.728L18.364 5.636M5.636 18.364l12.728-12.728"></path>
            </svg>
            <span>Block</span>
          </button>
          
          <button
            class="w-full text-left px-4 py-3 text-sm text-gray-700 dark:text-gray-300 hover:bg-orange-50 dark:hover:bg-orange-900/20 hover:text-orange-600 dark:hover:text-orange-400 transition-colors duration-200 flex items-center space-x-3"
            phx-click={JS.push("open_modal") |> open_modal()}
            phx-value-action="report-post"
            phx-target={@myself}
            @click="open = false"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
            </svg>
            <span>Report</span>
          </button>

          <div class="border-t border-gray-200 dark:border-gray-700 my-2"></div>

          <div class="px-3 pb-2">
            <button
              type="button"
              @click="tOpen = !tOpen"
              class="w-full flex items-center justify-between px-2 py-2 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors"
            >
              <span class="text-sm font-medium text-gray-700 dark:text-gray-300 flex items-center space-x-2">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m-6 6h6m2 0h8m-8 6h8m-8 0H5m14-6v10" />
                </svg>
                <span>Translate</span>
              </span>
              <svg x-show="!tOpen" class="w-4 h-4 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
              <svg x-show="tOpen" class="w-4 h-4 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" style="display:none">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 15l7-7 7 7" />
              </svg>
            </button>
            <div x-show="tOpen" x-transition class="mt-2 grid grid-cols-4 gap-2">
              <%= for lang <- (assigns[:supported_translation_langs] || ["ru","it","es","az"]) do %>
                <button
                  class={"px-2 py-1.5 rounded-lg text-xs font-medium border transition-all #{if @translated_lang == lang, do: "bg-blue-600 text-white border-blue-600 shadow", else: "text-gray-700 dark:text-gray-200 border-gray-200 dark:border-gray-600 hover:bg-gray-50 dark:hover:bg-gray-700"}"}
                  phx-click="translate-post"
                  phx-value-post-id={@post.id}
                  phx-value-target={lang}
                  phx-target={@myself}
                  @click="open = false; tOpen = false"
                >
                  <%= String.upcase(lang) %>
                </button>
              <% end %>
            </div>

            <%= if @translated_text do %>
              <button
                class="mt-2 w-full text-left px-2 py-2 text-xs text-gray-600 dark:text-gray-400 hover:text-red-600 hover:bg-red-50 dark:hover:bg-red-900/20 rounded-lg transition-colors"
                phx-click="clear-translation"
                phx-target={@myself}
                @click="open = false; tOpen = false"
              >
                Clear translation
              </button>
            <% end %>
          </div>
        <% else %>
          <button
            class="w-full text-left px-4 py-3 text-sm text-gray-700 dark:text-gray-300 hover:bg-green-50 dark:hover:bg-green-900/20 hover:text-green-600 dark:hover:text-green-400 transition-colors duration-200 flex items-center space-x-3"
            phx-click="edit_post"
            phx-value-post-id={@post.id}
            phx-target={@myself}
            @click="open = false"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
            <span>Edit</span>
          </button>

          <button
            class="w-full text-left px-4 py-3 text-sm text-gray-700 dark:text-gray-300 hover:bg-red-50 dark:hover:bg-red-900/20 hover:text-red-600 dark:hover:text-red-400 transition-colors duration-200 flex items-center space-x-3"
            phx-click="delete-post"
            phx-value-post-id={@post.id}
            phx-target={@myself}
            @click="open = false"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
            </svg>
            <span>Delete</span>
          </button>

          <div class="border-t border-gray-200 dark:border-gray-700 my-2"></div>

          <div class="px-3 pb-2">
            <button
              type="button"
              @click="tOpen = !tOpen"
              class="w-full flex items-center justify-between px-2 py-2 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors"
            >
              <span class="text-sm font-medium text-gray-700 dark:text-gray-300 flex items-center space-x-2">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m-6 6h6m2 0h8m-8 6h8m-8 0H5m14-6v10" />
                </svg>
                <span>Translate</span>
              </span>
              <svg x-show="!tOpen" class="w-4 h-4 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
              <svg x-show="tOpen" class="w-4 h-4 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" style="display:none">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 15l7-7 7 7" />
              </svg>
            </button>

            <div x-show="tOpen" x-transition class="mt-2 grid grid-cols-4 gap-2">
              <%= for lang <- (assigns[:supported_translation_langs] || ["ru","it","es","az"]) do %>
                <button
                  class={"px-2 py-1.5 rounded-lg text-xs font-medium border transition-all #{if @translated_lang == lang, do: "bg-blue-600 text-white border-blue-600 shadow", else: "text-gray-700 dark:text-gray-200 border-gray-200 dark:border-gray-600 hover:bg-gray-50 dark:hover:bg-gray-700"}"}
                  phx-click="translate-post"
                  phx-value-post-id={@post.id}
                  phx-value-target={lang}
                  phx-target={@myself}
                  @click="open = false; tOpen = false"
                >
                  <%= String.upcase(lang) %>
                </button>
              <% end %>
            </div>

            <%= if @translated_text do %>
              <button
                class="mt-2 w-full text-left px-2 py-2 text-xs text-gray-600 dark:text-gray-400 hover:text-red-600 hover:bg-red-50 dark:hover:bg-red-900/20 rounded-lg transition-colors"
                phx-click="clear-translation"
                phx-target={@myself}
                @click="open = false; tOpen = false"
              >
                Clear translation
              </button>
            <% end %>
          </div>
        <% end %>

        <%= if @ipns_id do %>
          <div class="border-t border-gray-200 dark:border-gray-600 my-2"></div>
          <a 
            href={"https://ipfs.io/ipns/#{@ipns_id}"} 
            target="_blank" 
            rel="noopener noreferrer"
            class="w-full text-left px-4 py-3 text-sm text-purple-600 dark:text-purple-400 hover:bg-purple-50 dark:hover:bg-purple-900/20 transition-colors duration-200 flex items-center space-x-3"
            @click="open = false; tOpen = false"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
            </svg>
            <span class="truncate">View on IPFS</span>
          </a>
        <% end %>
      </div>
    </div>
  </div>

  <%= if @editing_post do %>
    <div class="mt-6">
      <.form
        :let={f}
        for={@update_post_changeset}
        phx-submit="update-post"
        phx-target={@myself}
        class="w-full"
      >
        <div class="space-y-4">
          <%= textarea(f, :content,
            class: "w-full border border-gray-300 dark:border-gray-600 rounded-xl p-4 focus:ring-2 focus:ring-blue-500 focus:border-transparent dark:bg-gray-800 dark:text-white resize-none",
            placeholder: "Edit your post...",
            value: @editing_post,
            rows: "4"
          ) %>
          <div class="flex justify-end space-x-3">
            <%= submit("Save Changes",
              class: "bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-xl font-medium transition-colors duration-200"
            ) %>
            <button
              type="button"
              phx-click="cancel-edit"
              phx-target={@myself}
              class="bg-gray-500 hover:bg-gray-600 text-white px-6 py-2 rounded-xl font-medium transition-colors duration-200"
            >
              Cancel
            </button>
          </div>
        </div>
      </.form>
    </div>
  <% else %>
    <div class="mt-4">

      <%= if @translated_text do %>
        <div class="mb-4 rounded-2xl border border-blue-200 dark:border-blue-900/40 bg-blue-50/60 dark:bg-blue-900/10 p-4 shadow-sm">
          <div class="flex items-start justify-between">
            <div class="flex items-center space-x-2">
              <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-semibold bg-blue-100 text-blue-800 dark:bg-blue-900/40 dark:text-blue-200">
                <%= String.upcase(@translated_lang || "EN") %>
              </span>
              <span class="text-xs text-blue-700/80 dark:text-blue-200/80">
                Translated from EN → <%= String.upcase(@translated_lang || "") %>
              </span>
            </div>
            <div class="flex items-center space-x-2">
              <div class="hidden sm:flex items-center space-x-1">
                <%= for lang <- (assigns[:supported_translation_langs] || ["ru","it","es","az"]) do %>
                  <button
                    class={"px-2 py-1 rounded-md text-[10px] font-medium border transition-all #{if @translated_lang == lang, do: "bg-white dark:bg-blue-900/30 text-blue-700 dark:text-blue-200 border-blue-300 dark:border-blue-800 shadow", else: "text-blue-700/80 dark:text-blue-200/80 border-blue-200 dark:border-blue-800 hover:bg-white hover:shadow"}"}
                    phx-click="translate-post"
                    phx-value-post-id={@post.id}
                    phx-value-target={lang}
                    phx-target={@myself}
                    title={"Translate to #{String.upcase(lang)}"}
                  >
                    <%= String.upcase(lang) %>
                  </button>
                <% end %>
              </div>
              <button
                class="ml-2 inline-flex items-center px-2.5 py-1.5 rounded-md text-xs font-medium bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 text-gray-700 dark:text-gray-200 hover:bg-gray-50 dark:hover:bg-gray-700 transition"
                phx-click="clear-translation"
                phx-target={@myself}
                title="Clear translation"
              >
                Clear
              </button>
            </div>
          </div>
          <div class="mt-3">
            <p class="text-gray-900 dark:text-gray-100 leading-relaxed">
              <%= @translated_text %>
            </p>
          </div>
        </div>
      <% end %>

      <p class="text-gray-900 dark:text-white text-base leading-relaxed">
        <%= raw(@post |> activate_content_characters(@socket)) %>
        <span class="text-blue-600 dark:text-blue-400 text-sm font-medium ml-2"><%= Enum.join(@post.profile_tags, " ") %></span>
      </p>

      <%= if post_has_media?(@post.id) do %>
        <div class="mt-4">
          <img
            alt="Post image"
            class="w-full rounded-xl object-cover border border-gray-200 dark:border-gray-700"
            src={get_image_url(@post.id)}
          />
        </div>
      <% end %>
    </div>
  <% end %>

  <div class="flex items-center justify-between mt-6 pt-4 border-t border-gray-100 dark:border-gray-700">
    <div class="flex items-center space-x-6">
      <div class="flex items-center space-x-1">
        <button 
          class="flex items-center space-x-2 px-3 py-2 rounded-xl hover:bg-red-50 dark:hover:bg-red-900/20 transition-all duration-200 group"
          phx-click={@like_event}
          phx-value-post-id={@post.id}
          phx-target={@myself}
          phx-value-action="like-post"
        >
          <%= Heroicons.icon(@like_icon,
            type: "solid",
            class: "h-5 w-5 text-gray-500 group-hover:text-red-500 transition-colors duration-200"
          ) %>
        </button>
        
        <%= if @likes_count > 0 do %>
          <button
            class="text-sm font-medium text-gray-600 dark:text-gray-400 hover:text-red-500 hover:underline transition-colors duration-200 px-2 py-1 rounded"
            phx-click="open_likes_modal"
            phx-value-post-id={@post.id}
            phx-target={@myself}
            title="View who liked this post"
          >
            <%= @likes_count %> <%= if @likes_count == 1, do: "like", else: "likes" %>
          </button>
        <% else %>
          <span class="text-sm font-medium text-gray-600 dark:text-gray-400 px-2 py-1">
            0 likes
          </span>
        <% end %>
      </div>

      <button class="flex items-center space-x-2 px-3 py-2 rounded-xl hover:bg-blue-50 dark:hover:bg-blue-900/20 transition-all duration-200 group">
        <svg class="h-5 w-5 text-gray-500 group-hover:text-blue-500 transition-colors duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.367 2.684 3 3 0 00-5.367-2.684z"></path>
        </svg>
        <span class="text-sm font-medium text-gray-600 dark:text-gray-400 group-hover:text-blue-500 transition-colors duration-200">
          Share
        </span>
      </button>

      <button 
        class="flex items-center space-x-2 px-3 py-2 rounded-xl hover:bg-green-50 dark:hover:bg-green-900/20 transition-all duration-200 group"
        phx-click={Phoenix.LiveView.JS.toggle(to: "#view-comments-#{@post.id}")}
      >
        <svg class="h-5 w-5 text-gray-500 group-hover:text-green-500 transition-colors duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
        </svg>
        <span class="text-sm font-medium text-gray-600 dark:text-gray-400 group-hover:text-green-500 transition-colors duration-200">
          <%= Enum.count(@comments) %>
        </span>
      </button>
    </div>

    <button
      class="text-blue-600 dark:text-blue-400 text-sm font-medium hover:text-blue-700 dark:hover:text-blue-300 transition-colors duration-200"
      phx-click={Phoenix.LiveView.JS.toggle(to: "#view-comments-#{@post.id}")}
    >
      View <%= @comments |> Enum.count() %> comments
    </button>
  </div>

  <div class="mt-6 pt-6 border-t border-gray-100 dark:border-gray-700">
    <.form
      :let={f}
      for={@changeset}
      phx-blur="validate-comment"
      phx-target={@myself}
      phx-submit="save-comment"
      as={:comment}
      class="flex items-start space-x-4"
    >
      <div class="relative group flex-shrink-0">
        <div class="absolute inset-0 bg-gradient-to-br from-indigo-500 to-purple-600 rounded-full blur-sm opacity-20 group-hover:opacity-40 animate-pulse transition-opacity duration-300"></div>
        <div class="relative h-10 w-10 rounded-full overflow-hidden border-2 border-gray-200 dark:border-gray-700 shadow-md ring-2 ring-indigo-100/50 dark:ring-purple-900/30 bg-gradient-to-br from-indigo-100 to-purple-100 dark:from-indigo-900/20 dark:to-purple-900/20">
          <%= if get_user_avatar(@current_user.username) != "/images/default-avatar.png" do %>
            <img
              src={get_user_avatar(@current_user.username)}
              class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-110"
              alt={"#{@current_user.username}'s avatar"}
              onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
            />
            <div class="absolute inset-0 hidden items-center justify-center bg-gradient-to-br from-indigo-500 to-purple-600 text-white text-sm font-bold">
              <%= String.first(@current_user.username || "U") |> String.upcase() %>
            </div>
          <% else %>
