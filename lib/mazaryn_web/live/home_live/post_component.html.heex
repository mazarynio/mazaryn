<div class="relative w-full bg-white dark:bg-gray-900 shadow-lg hover:shadow-xl transition-all duration-300 border border-gray-100 dark:border-gray-700 pr-6 pl-6 pb-6 pt-6 mt-6 rounded-2xl">
  <div
    x-data="{ open: false, tOpen: false, showDeleteConfirm: false, showUnrepostConfirm: false }"
    x-on:click.outside="open = false; tOpen = false; showDeleteConfirm = false; showUnrepostConfirm = false"
    class="flex justify-between items-center"
  >
    <div class="flex items-center space-x-4">
      <div class="relative group">
        <div class="absolute inset-0 bg-gradient-to-br from-blue-500 to-purple-600 rounded-full blur-md opacity-20 group-hover:opacity-40 animate-pulse transition-opacity duration-300"></div>

        <div class="relative h-12 w-12 rounded-full overflow-hidden border-2 border-white dark:border-gray-700 shadow-lg ring-2 ring-blue-100/50 dark:ring-purple-900/30 bg-gradient-to-br from-blue-100 to-purple-100 dark:from-blue-900/20 dark:to-purple-900/20">
        <% avatar_user = if PostHelpers.is_video_share_post?(@post) do
                    video_data = PostHelpers.parse_video_share_content(@post)
                    video_data.video_owner
                  else
                    @post.author
                  end %>
                  <%= if get_user_avatar(avatar_user) != "/images/default-avatar.png" do %>
                    <img
                      src={get_user_avatar(avatar_user)}
                      class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-110"
                      alt={"#{avatar_user}'s avatar"}
              class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-110"
              alt={"#{@post.author}'s avatar"}
              onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
            />
            <div class="absolute inset-0 hidden items-center justify-center bg-gradient-to-br from-blue-500 to-purple-600 text-white text-lg font-bold">
              <%= String.first(to_string(@post.author) || "U") |> String.upcase() %>
            </div>
          <% else %>
            <div class="h-full w-full flex items-center justify-center bg-gradient-to-br from-blue-500 to-purple-600 text-white text-lg font-bold group-hover:from-blue-600 group-hover:to-purple-700 transition-all duration-300">
              <%= String.first(to_string(@post.author) || "U") |> String.upcase() %>
            </div>
          <% end %>
        </div>

        <div class="absolute -bottom-1 -right-1 w-4 h-4 bg-gradient-to-br from-green-400 to-emerald-500 rounded-full border-2 border-white dark:border-gray-700 shadow-lg">
          <div class="absolute inset-0 bg-green-400 rounded-full animate-ping opacity-30"></div>
        </div>
      </div>

      <div class="flex flex-col">
              <% display_username = if PostHelpers.is_video_share_post?(@post) do
                video_data = PostHelpers.parse_video_share_content(@post)
                video_data.video_owner
              else
                to_string(@post.author)
              end %>
              <%= live_redirect(to: Routes.live_path(@socket, MazarynWeb.UserLive.Profile, @locale, display_username),
                class: "group"
              )  do %>
          <div class="flex items-center space-x-2">
          <span class="text-gray-900 dark:text-white text-base font-semibold group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors duration-200 cursor-pointer">
                        <%= display_username %>
                      </span>
                      <%= if verified?(display_username)  do %>
              <img
                alt="verified user"
                src={Routes.static_path(@socket, "/images/verified.png")}
                class="h-5 w-5 rounded-full"
              />
            <% end %>
          </div>
        <% end %>
        <span class="text-gray-500 dark:text-gray-400 text-sm font-medium">
          <%= Timex.from_now(@post.date_created) %>
        </span>
      </div>
    </div>

    <div class="relative">
          <%= if !is_repost?(@post) && !PostHelpers.is_video_share_post?(@post) do %>
              <button
              phx-click="view_post_details"
              phx-value-post-id={@post.id}
              phx-target={@myself}
              class="mr-2 p-2 rounded-full hover:bg-blue-50 dark:hover:bg-blue-900/20 transition-colors duration-200 group"
              title="View full post"
            >
              <svg class="h-5 w-5 text-gray-400 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
              </svg>
            </button>
          <% end %>

          <button
            @click="open = !open; if (!open) tOpen = false"
            class="p-2 rounded-full hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors duration-200 group"
          >
        <svg class="h-5 w-5 text-gray-400 group-hover:text-gray-600 dark:group-hover:text-gray-300 transition-colors duration-200" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
          <path d="M10 6a2 2 0 110-4 2 2 0 010 4zM10 12a2 2 0 110-4 2 2 0 010 4zM10 18a2 2 0 110-4 2 2 0 010 4z"/>
        </svg>
      </button>

      <div
        x-show="open"
        x-transition:enter="transition ease-out duration-200"
        x-transition:enter-start="opacity-0 scale-95"
        x-transition:enter-end="opacity-100 scale-100"
        x-transition:leave="transition ease-in duration-150"
        x-transition:leave-start="opacity-100 scale-100"
        x-transition:leave-end="opacity-0 scale-95"
        class="absolute top-full right-0 mt-2 w-56 bg-white dark:bg-gray-800 rounded-xl shadow-xl border border-gray-200 dark:border-gray-700 py-2 z-50"
        style="display: none;"
      >
      <%= if @post.user_id != @current_user.id  do %>
                <button
                  class="w-full text-left px-4 py-3 text-sm text-gray-700 dark:text-gray-300 hover:bg-blue-50 dark:hover:bg-blue-900/20 hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-200 flex items-center space-x-3"
                  phx-click={@follow_event}
                  phx-value-username={"#{@post.author}"}
            phx-target={@myself}
            @click="open = false"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
            </svg>
            <span><%= @follow_text %></span>
          </button>

          <button class="w-full text-left px-4 py-3 text-sm text-gray-700 dark:text-gray-300 hover:bg-red-50 dark:hover:bg-red-900/20 hover:text-red-600 dark:hover:text-red-400 transition-colors duration-200 flex items-center space-x-3">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728L5.636 5.636m12.728 12.728L18.364 5.636M5.636 18.364l12.728-12.728"></path>
            </svg>
            <span>Block</span>
          </button>

          <button
                      class="w-full text-left px-4 py-3 text-sm text-gray-700 dark:text-gray-300 hover:bg-orange-50 dark:hover:bg-orange-900/20 hover:text-orange-600 dark:hover:text-orange-400 transition-colors duration-200 flex items-center space-x-3"
                      phx-click="open_modal"
                      phx-value-action="report-post"
            phx-target={@myself}
            @click="open = false"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
            </svg>
            <span>Report</span>
          </button>

          <div class="border-t border-gray-200 dark:border-gray-700 my-2"></div>

          <div class="px-3 pb-2">
            <button
              type="button"
              @click="tOpen = !tOpen"
              class="w-full flex items-center justify-between px-2 py-2 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors"
            >
              <span class="text-sm font-medium text-gray-700 dark:text-gray-300 flex items-center space-x-2">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m-6 6h6m2 0h8m-8 6h8m-8 0H5m14-6v10" />
                </svg>
                <span>Translate</span>
              </span>
              <svg x-show="!tOpen" class="w-4 h-4 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
              <svg x-show="tOpen" class="w-4 h-4 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" style="display:none">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 15l7-7 7 7" />
              </svg>
            </button>
            <div x-show="tOpen" x-transition class="mt-2 grid grid-cols-4 gap-2">
              <%= for lang <- (assigns[:supported_translation_langs] || ["ru","it","es","az"]) do %>
                <button
                  class={"px-2 py-1.5 rounded-lg text-xs font-medium border transition-all #{if @translated_lang == lang, do: "bg-blue-600 text-white border-blue-600 shadow", else: "text-gray-700 dark:text-gray-200 border-gray-200 dark:border-gray-600 hover:bg-gray-50 dark:hover:bg-gray-700"}"}
                  phx-click="translate-post"
                  phx-value-post-id={@post.id}
                  phx-value-target={lang}
                  phx-target={@myself}
                  @click="open = false; tOpen = false"
                >
                  <%= String.upcase(lang) %>
                </button>
              <% end %>
            </div>

            <%= if @translated_text do %>
              <button
                class="mt-2 w-full text-left px-2 py-2 text-xs text-gray-600 dark:text-gray-400 hover:text-red-600 hover:bg-red-50 dark:hover:bg-red-900/20 rounded-lg transition-colors"
                phx-click="clear-translation"
                phx-target={@myself}
                @click="open = false; tOpen = false"
              >
                Clear translation
              </button>
            <% end %>
          </div>
        <% else %>
          <button
            class="w-full text-left px-4 py-3 text-sm text-gray-700 dark:text-gray-300 hover:bg-green-50 dark:hover:bg-green-900/20 hover:text-green-600 dark:hover:text-green-400 transition-colors duration-200 flex items-center space-x-3"
            phx-click="edit_post"
            phx-value-post-id={@post.id}
            phx-target={@myself}
            @click="open = false"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
            <span>Edit</span>
          </button>

          <button
            class="w-full text-left px-4 py-3 text-sm text-gray-700 dark:text-gray-300 hover:bg-red-50 dark:hover:bg-red-900/20 hover:text-red-600 dark:hover:text-red-400 transition-colors duration-200 flex items-center space-x-3"
            @click="showDeleteConfirm = true; open = false"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
            </svg>
            <span>Delete</span>
          </button>

          <%= if is_repost?(@post) do %>
            <div class="border-t border-gray-200 dark:border-gray-700 my-2"></div>
            <button
              @click="showUnrepostConfirm = true; open = false"
              class="w-full text-left px-4 py-3 text-sm text-gray-700 dark:text-gray-300 hover:bg-orange-50 dark:hover:bg-orange-900/20 hover:text-orange-600 dark:hover:text-orange-400 transition-colors duration-200 flex items-center space-x-3"
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h10a8 8 0 018 8v2M3 10l6 6m-6-6l6-6"/>
              </svg>
              <span>Unshare Post</span>
            </button>
          <% end %>

          <div class="border-t border-gray-200 dark:border-gray-700 my-2"></div>

          <div class="px-3 pb-2">
            <button
              type="button"
              @click="tOpen = !tOpen"
              class="w-full flex items-center justify-between px-2 py-2 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors"
            >
              <span class="text-sm font-medium text-gray-700 dark:text-gray-300 flex items-center space-x-2">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m-6 6h6m2 0h8m-8 6h8m-8 0H5m14-6v10" />
                </svg>
                <span>Translate</span>
              </span>
              <svg x-show="!tOpen" class="w-4 h-4 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
              <svg x-show="tOpen" class="w-4 h-4 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" style="display:none">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 15l7-7 7 7" />
              </svg>
            </button>

            <div x-show="tOpen" x-transition class="mt-2 grid grid-cols-4 gap-2">
              <%= for lang <- (assigns[:supported_translation_langs] || ["ru","it","es","az"]) do %>
                <button
                  class={"px-2 py-1.5 rounded-lg text-xs font-medium border transition-all #{if @translated_lang == lang, do: "bg-blue-600 text-white border-blue-600 shadow", else: "text-gray-700 dark:text-gray-200 border-gray-200 dark:border-gray-600 hover:bg-gray-50 dark:hover:bg-gray-700"}"}
                  phx-click="translate-post"
                  phx-value-post-id={@post.id}
                  phx-value-target={lang}
                  phx-target={@myself}
                  @click="open = false; tOpen = false"
                >
                  <%= String.upcase(lang) %>
                </button>
              <% end %>
            </div>

            <%= if @translated_text do %>
              <button
                class="mt-2 w-full text-left px-2 py-2 text-xs text-gray-600 dark:text-gray-400 hover:text-red-600 hover:bg-red-50 dark:hover:bg-red-900/20 rounded-lg transition-colors"
                phx-click="clear-translation"
                phx-target={@myself}
                @click="open = false; tOpen = false"
              >
                Clear translation
              </button>
            <% end %>
          </div>
        <% end %>

        <%= if @ipns_id do %>
          <div class="border-t border-gray-200 dark:border-gray-600 my-2"></div>
          <a
            href={~p"/#{@locale}/ipfs/#{extract_ipfs_hash(@ipns_id)}"}
            target="_blank"
            class="w-full text-left px-4 py-3 text-purple-600 dark:text-purple-400 hover:bg-purple-50 dark:hover:bg-purple-900/20 transition-colors duration-200 flex items-center space-x-3"
            @click="open = false; tOpen = false"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
            </svg>
            <span class="truncate">View on IPFS</span>
          </a>
        <% end %>
      </div>
    </div>

    <div
      x-show="showDeleteConfirm"
      x-transition:enter="transition ease-out duration-300"
      x-transition:enter-start="opacity-0"
      x-transition:enter-end="opacity-100"
      x-transition:leave="transition ease-in duration-200"
      x-transition:leave-start="opacity-100"
      x-transition:leave-end="opacity-0"
      class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50"
      style="display: none;"
    >
      <div
        x-show="showDeleteConfirm"
        x-transition:enter="transition ease-out duration-300"
        x-transition:enter-start="opacity-0 scale-95"
        x-transition:enter-end="opacity-100 scale-100"
        x-transition:leave="transition ease-in duration-200"
        x-transition:leave-start="opacity-100 scale-100"
        x-transition:leave-end="opacity-0 scale-95"
        class="bg-white dark:bg-gray-800 rounded-2xl shadow-2xl p-8 max-w-md mx-4"
      >
        <div class="text-center">
          <div class="mx-auto flex items-center justify-center h-16 w-16 rounded-full bg-red-100 dark:bg-red-900/20 mb-6">
            <svg class="h-8 w-8 text-red-600 dark:text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-3">Delete Post?</h3>
          <p class="text-gray-600 dark:text-gray-400 mb-8 leading-relaxed">
            Are you sure you want to delete this post? This action cannot be undone and the post will be permanently removed from your profile and feed.
          </p>
          <div class="flex space-x-4 justify-center">
            <button
              @click="showDeleteConfirm = false"
              class="px-6 py-3 bg-gray-200 hover:bg-gray-300 dark:bg-gray-700 dark:hover:bg-gray-600 text-gray-800 dark:text-gray-200 font-semibold rounded-xl transition-colors duration-200"
            >
              Cancel
            </button>
            <button
              phx-click="delete-post"
              phx-value-post-id={@post.id}
              phx-target={@myself}
              @click="showDeleteConfirm = false"
              class="px-6 py-3 bg-red-600 hover:bg-red-700 text-white font-semibold rounded-xl transition-colors duration-200 shadow-lg hover:shadow-xl"
            >
              Delete Post
            </button>
          </div>
        </div>
      </div>
    </div>

    <div
      x-show="showUnrepostConfirm"
      x-transition:enter="transition ease-out duration-300"
      x-transition:enter-start="opacity-0"
      x-transition:enter-end="opacity-100"
      x-transition:leave="transition ease-in duration-200"
      x-transition:leave-start="opacity-100"
      x-transition:leave-end="opacity-0"
      class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50"
      style="display: none;"
    >
      <div
        x-show="showUnrepostConfirm"
        x-transition:enter="transition ease-out duration-300"
        x-transition:enter-start="opacity-0 scale-95"
        x-transition:enter-end="opacity-100 scale-100"
        x-transition:leave="transition ease-in duration-200"
        x-transition:leave-start="opacity-100 scale-100"
        x-transition:leave-end="opacity-0 scale-95"
        class="bg-white dark:bg-gray-800 rounded-2xl shadow-2xl p-8 max-w-md mx-4"
      >
        <div class="text-center">
          <div class="mx-auto flex items-center justify-center h-16 w-16 rounded-full bg-orange-100 dark:bg-orange-900/20 mb-6">
            <svg class="h-8 w-8 text-orange-600 dark:text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h10a8 8 0 018 8v2M3 10l6 6m-6-6l6-6"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-3">Unshare Post?</h3>
          <p class="text-gray-600 dark:text-gray-400 mb-8 leading-relaxed">
            Are you sure you want to remove this shared post? This will remove it from your profile and your followers' feeds.
          </p>
          <div class="flex space-x-4 justify-center">
            <button
              @click="showUnrepostConfirm = false"
              class="px-6 py-3 bg-gray-200 hover:bg-gray-300 dark:bg-gray-700 dark:hover:bg-gray-600 text-gray-800 dark:text-gray-200 font-semibold rounded-xl transition-colors duration-200"
            >
              Cancel
            </button>
            <button
              phx-click="confirm_unrepost"
              phx-value-post-id={@post.id}
              phx-target={@myself}
              @click="showUnrepostConfirm = false"
              class="px-6 py-3 bg-orange-600 hover:bg-orange-700 text-white font-semibold rounded-xl transition-colors duration-200 shadow-lg hover:shadow-xl"
            >
              Unshare
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%= if is_repost?(@post) do %>
        <div class="mt-2 mb-1 flex items-center space-x-2 text-sm text-gray-600 dark:text-gray-400">
          <svg class="h-4 w-4 text-green-600 dark:text-green-400" fill="currentColor" viewBox="0 0 24 24">
            <path d="M7 7h10v3l4-4-4-4v3H5v6h2V7zm10 10H7v-3l-4 4 4 4v-3h12v-6h-2v4z"/>
          </svg>
          <span class="font-medium">
            <%= if @post.user_id == @current_user.id do %>
              You shared this
            <% else %>
              <%= to_string(@post.author) %> shared this
            <% end %>
          </span>
        </div>

        <%= if @post.repost_type == "with_comment" do %>
          <% repost_comment = get_repost_comment_content(@post) %>
          <%= if repost_comment && String.trim(repost_comment) != "" do %>
            <div class="mt-1 mb-2 p-2 bg-gray-50 dark:bg-gray-800/50 rounded-xl">
              <p class="text-base font-semibold text-gray-900 dark:text-white leading-relaxed whitespace-pre-wrap">
                <%= repost_comment %>
              </p>
            </div>
          <% end %>
        <% end %>

        <%= case get_original_post(@post) do %>
          <% {:ok, original_post} -> %>
            <div
              class="mt-1 p-3 bg-gray-50 dark:bg-gray-800/50 rounded-xl border-2 border-gray-200 dark:border-gray-700 hover:border-blue-400 dark:hover:border-blue-500 transition-all duration-200 cursor-pointer group"
              phx-click="view_original_post"
              phx-value-post-id={original_post.id}
              phx-target={@myself}
            >
              ...existing repost content...
            </div>
          <% {:error, _} -> %>
            <div class="mt-1 p-3 bg-gray-50 dark:bg-gray-800/50 rounded-xl border border-gray-200 dark:border-gray-700">
