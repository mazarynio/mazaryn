                            class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-110"
                            alt={"#{@current_user.username}'s avatar"}
                            onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
                          />
                          <div class="absolute inset-0 hidden items-center justify-center bg-gradient-to-br from-indigo-500 to-purple-600 text-white text-xs font-bold">
                            <%= String.first(@current_user.username || "U") |> String.upcase() %>
                          </div>
                        <% else %>
                          <div class="h-full w-full flex items-center justify-center bg-gradient-to-br from-indigo-500 to-purple-600 text-white text-xs font-bold group-hover:from-indigo-600 group-hover:to-purple-700 transition-all duration-300">
                            <%= String.first(@current_user.username || "U") |> String.upcase() %>
                          </div>
                        <% end %>
                      </div>
                    </div>

                    <.form
                      :let={f}
                      for={@changeset}
                      phx-submit="reply_comment_content"
                      phx-target={@myself}
                      as={:comment}
                      class="flex-1 space-y-3"
                    >
                      <%= hidden_input(f, :comment_id, value: comment.id) %>
                      <%= text_input(f, :content,
                        class: "w-full border border-gray-300 dark:border-gray-600 rounded-lg p-2 text-sm focus:ring-2 focus:ring-blue-500 focus:border-transparent dark:bg-gray-800 dark:text-white placeholder-gray-500 dark:placeholder-gray-400",
                        placeholder: "Write a reply...",
                        required: true,
                        autofocus: true) %>
                      <div class="flex justify-end space-x-2">
                        <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors duration-200 disabled:opacity-50" phx-disable-with="Replying...">
                          Reply
                        </button>
                        <button type="button" phx-click="cancel-comment-reply" phx-target={@myself}
                          class="bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors duration-200">
                          Cancel
                        </button>
                      </div>
                    </.form>
                  </div>
                </div>
              <% end %>
            </div>
          </div>

          <div
            x-show="showDeleteCommentConfirm"
            x-transition:enter="transition ease-out duration-300"
            x-transition:enter-start="opacity-0"
            x-transition:enter-end="opacity-100"
            x-transition:leave="transition ease-in duration-200"
            x-transition:leave-start="opacity-100"
            x-transition:leave-end="opacity-0"
            class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50"
            style="display: none;"
          >
            <div
              x-show="showDeleteCommentConfirm"
              x-transition:enter="transition ease-out duration-300"
              x-transition:enter-start="opacity-0 scale-95"
              x-transition:enter-end="opacity-100 scale-100"
              x-transition:leave="transition ease-in duration-200"
              x-transition:leave-start="opacity-100 scale-100"
              x-transition:leave-end="opacity-0 scale-95"
              class="bg-white dark:bg-gray-800 rounded-2xl shadow-2xl p-8 max-w-md mx-4"
            >
              <div class="text-center">
                <div class="mx-auto flex items-center justify-center h-16 w-16 rounded-full bg-red-100 dark:bg-red-900/20 mb-6">
                  <svg class="h-8 w-8 text-red-600 dark:text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                  </svg>
                </div>
                <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-3">Delete Comment?</h3>
                <p class="text-gray-600 dark:text-gray-400 mb-8 leading-relaxed">
                  Are you sure you want to delete this comment? This action cannot be undone and will also delete all replies to this comment.
                </p>
                <div class="flex space-x-4 justify-center">
                  <button
                    @click="showDeleteCommentConfirm = false"
                    class="px-6 py-3 bg-gray-200 hover:bg-gray-300 dark:bg-gray-700 dark:hover:bg-gray-600 text-gray-800 dark:text-gray-200 font-semibold rounded-xl transition-colors duration-200"
                  >
                    Cancel
                  </button>
                  <button
                    phx-click="delete-comment"
                    phx-value-comment-id={comment.id}
                    phx-value-post-id={comment.post_id}
                    phx-target={@myself}
                    @click="showDeleteCommentConfirm = false"
                    class="px-6 py-3 bg-red-600 hover:bg-red-700 text-white font-semibold rounded-xl transition-colors duration-200 shadow-lg hover:shadow-xl"
                  >
                    Delete Comment
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <%= if @report_action or @like_action or assigns[:show_likes_modal] do %>
          <div class="fixed inset-0 z-50 overflow-y-auto">
            <div class="flex items-center justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
              <div
                class="fixed inset-0 transition-opacity bg-gray-500 bg-opacity-75"
                phx-click="close_likes_modal"
                phx-target={@myself}
              ></div>

              <span class="hidden sm:inline-block sm:align-middle sm:h-screen">&#8203;</span>

              <div class="inline-block align-bottom bg-white dark:bg-gray-800 rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full">

                <%= if @report_action do %>
                  <div class="bg-white dark:bg-gray-800 px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
                    <div class="sm:flex sm:items-start">
                      <div class="mx-auto flex-shrink-0 flex items-center justify-center h-12 w-12 rounded-full bg-red-100 dark:bg-red-900 sm:mx-0 sm:h-10 sm:w-10">
                        <svg class="h-6 w-6 text-red-600 dark:text-red-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z" />
                        </svg>
                      </div>
                      <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left w-full">
                        <h3 class="text-lg leading-6 font-medium text-gray-900 dark:text-white">Report Post</h3>
                        <div class="mt-2">
                          <.live_component
                            module={MazarynWeb.HomeLive.ReportPostsComponent}
                            id={@post.id}
                            current_user={@current_user}
                          />
                        </div>
                      </div>
                    </div>
                  </div>
                <% end %>

                <%= if assigns[:show_likes_modal] do %>
                  <div class="bg-white dark:bg-gray-800 px-4 pt-5 pb-4 sm:p-6">
                    <div class="flex items-center justify-between mb-4">
                      <h3 class="text-lg leading-6 font-medium text-gray-900 dark:text-white">
                        Reactions
                      </h3>
